<ResourceDictionary
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Attr="clr-namespace:Alioss.Client.Tools;assembly=Alioss.Client.Tools"
             xmlns:local="clr-namespace:Alioss.Client.Skin">
    <!-- 文字图标 -->
    <Style x:Key="IconFont" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="pack://application:,,,/SCX.Client.Skin;component/#fontello"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="{Binding FontSize}"/>
        <Setter Property="Foreground" Value="{Binding Foreground}"/>
    </Style>
       
</ResourceDictionary>
